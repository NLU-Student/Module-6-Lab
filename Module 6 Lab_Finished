# Random Module Problem 1
print("\n\nProblem 1: ")
import random
num = 10                #num will determine the amount of times the for loop will loop back.
for i in range(num):
    prob = random.randrange(25, 36)
    print(prob)

# Random Module Problem 2
print("\n\nProblem 2: ")
import random
for i in range(1):
    prob = random.randrange(0, 101)
    if prob % 2 !=0:
        print(prob)
    elif prob % 2 == 0:
        print("re-run program, outcome is even")

# Random Module Problem 3
print("\n\nProblem 3: ")
import random
i = ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"]
print("Happy", random.choice(i),"!")

# Math Module Problem 4
print("\n\nProblem 4: ")
import math
print(math.pi)
pie = (66 * (math.sqrt(2)))/(33 * (math.sqrt(29)) - 148)
print(pie)

# Math Module Problem 5
print("\n\nProblem 5: ")
import math
Radian = float(input("What is the angle in radians: "))
Degree = (Radian * 180) / math.pi
print("The conversion from radian to degree is ", Degree)

x = float(input("What is the angle in radians: "))
print("Math module equals: ", math.degrees(x))

# Math Module Problem 6
print("\n\nProblem 6: ")
import math
num = int(input("Enter number: "))
fact = 1
if num == 0:
    print(1)
for i in range(1, num+1):
    fact = fact * i 
    print(fact)